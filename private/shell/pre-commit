#!/bin/tcsh

foreach file (`git diff-index --name-only HEAD`)
    echo -n "checking license on $file... "
	if ($file:e == "java" || $file:e == "scala") then
        private/shell/updateLicenseForFile.csh $file;
        set result = $status
        if ($result != 0) then
            exit $result
        else
            echo "OK"
        endif
	else
	    echo "doesn't need a license (not java or scala)";
	endif
end
